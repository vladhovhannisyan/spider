{
"update_url": "https://clients2.google.com/service/update2/crx",

  "name": "Spider - a smart web scraping tool",
  "short_name": "Spider",
  "version": "0.1",
  "author": "Oktay Tajahmady",
  "description": "let's you turn websites into organized data, download them as JSON/CSV. No coding or configuration required.",
  "manifest_version": 2,
  "commands": {
    "toggle-spider": {
      "suggested_key": {
        "default": "Alt+Q",
        "mac": "Alt+Q",
        "windows": "Alt+Q",
        "chromeos": "Alt+Q",
        "linux": "Alt+Q"
      },
      "description": "Toggle Spider"
    }
  },
  "permissions": [
    "http://localhost:8080/",
    "http://fonts.googleapis.com/",
    "https://fonts.googleapis.com/",
    "storage",
    "downloads",
    "activeTab",
    "declarativeContent"
  ],
  "web_accessible_resources": [
    "content-min.js",
    "content/content.css",
    "content/content.html",
    "images/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "browser_action": {
    "default_icon": {

    }
  }
}
